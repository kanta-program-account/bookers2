<div class="container">
  <% if @user.errors.any? %>
    <h3><%= @user.errors.count %> errors prohibited this obj from being saved: </h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
      
        <p>Name</p>
        <%= f.text_field :name %>
        
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        
        <p>Introduction</p>
        <%= f.text_area :introduction %>
        <%= f.submit 'Update User', class:"btn btn-secondary d-block" %>
        
      <% end %>
    </div>
  </div>
</div>