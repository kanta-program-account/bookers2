<div class="container">
  <div class="row mx-auto">
    <div class="col-md-3">
      <%= render 'books/info', user: @user_self %>
      <%= render 'books/new', book: @book %>
    </div>
    
    <div class="col-md-8 mx-auto align-middle">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @user_selfothers.books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100,100) %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>