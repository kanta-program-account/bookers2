<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><p><%= user.name %></p></td>
            <td><span class = "link"><%= link_to "Show", user_path(user.id) %></span></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



