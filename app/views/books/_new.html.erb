<div class="container">
  <div class="row pt-3">
    <h1>New book</h1>
    <%= form_with model: book, url: '/books', method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title, value:'' %>
      <p>Opinion</p>
      <%= f.text_area :body, value:'' %>
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    <% end %>
  </div>
</div>