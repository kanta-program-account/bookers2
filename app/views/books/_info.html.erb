<div class="container">
  <div class="row">
    <h1>User info</h1>
    <div class="col-12">
      <%= image_tag user.get_profile_image(100,100) %>
    </div>
    
    <table class="table">
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </table>
    
    <div class="col-12">
      <%= link_to edit_user_path(user.id), class: "btn btn-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
  </div>
</div>


