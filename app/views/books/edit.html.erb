<div class="container">
  <div class="row">
    <div class=" mx-auto col-sm-10 col-lg-8 col-xl- ">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book', class:"btn btn-success d-block" %>
      <% end %>
    </div>
  </div>
</div>