<div class="container">
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this obj from being saved: </h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class=" mx-auto col-sm-10 col-lg-8 col-xl- ">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book', class:"btn btn-success d-block" %>
      <% end %>
      
      <div>
        <%= link_to "Show", book_path(params[:id]) %>
        <span> | </span>
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>