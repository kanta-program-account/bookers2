<%= render 'info', user: @user %>
<%= render 'new', book: @book %>

<h1>Book detail</h1>
<table>
  <tr>
    <td>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <p><%= @book.user.name %></p>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><span class = "link"><%= link_to "Edit", edit_book_path(@book.id) %></span></td>
    <td><span class = "link"><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></span></td>
  </tr>
</table>