<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Book detail</h1>
<table>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag book.get_image %>
          <p><%= book.user.name %></p>
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><span class = "link"><%= link_to "Edit", edit_book_path(book.id) %></span></td>
        <td><span class = "link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></span></td>
      </tr>
      <% end %>
</table>